<h1>Login!</h1>
<!-- This plain ruby "form_tag" is not connected to an actial model -->
<!-- Models should use "form_for" -->
<%= form_tag(sessions_path) do %>

  <!-- This flash notice is enabled here: app/views/layouts/convoyapp.html.erb -->
  <% if flash[:notice] %>
    <div class="fields_with_errors"><h3 style="color:red;"><%= flash[:notice] %><h3></div>
  <% end %>
  <%= text_field_tag :email, '', :placeholder => "Login with your email" %>
  <%= text_field_tag :password, '', :placeholder => "Login with your password" %>
  <%= submit_tag "Submit" %>
<% end %>


